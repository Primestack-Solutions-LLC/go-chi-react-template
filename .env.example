# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/{{PROJECT_NAME}}_dev?sslmode=disable
DATABASE_URL_TEST=postgres://postgres:postgres@localhost:5432/{{PROJECT_NAME}}_test?sslmode=disable

# Server
SERVER_ADDRESS=:8080
ENVIRONMENT=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRY=24h

# Frontend
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis (Optional - set REDIS_ENABLED=false to disable)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h
